<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteBloodTest">

    <include
        android:id="@+id/viewHiveToolBar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bourder"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewHiveToolBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/patientN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/patientID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="ID"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/patientN" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Bloodtest"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewHiveToolBar"
        app:layout_constraintEnd_toEndOf="@+id/viewHiveToolBar"
        app:layout_constraintStart_toStartOf="@+id/viewHiveToolBar"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/test"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Test"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <EditText
        android:id="@+id/unit"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="Unit"
        app:layout_constraintStart_toEndOf="@+id/test"
        app:layout_constraintTop_toTopOf="@+id/test" />

    <EditText
        android:id="@+id/result"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="Result"
        app:layout_constraintStart_toEndOf="@+id/unit"
        app:layout_constraintTop_toTopOf="@+id/unit" />

    <EditText
        android:id="@+id/normal"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:hint="Normal"
        app:layout_constraintStart_toEndOf="@+id/result"
        app:layout_constraintTop_toTopOf="@+id/result" />

    <EditText
        android:id="@+id/note"
        android:layout_width="370dp"
        android:layout_height="49dp"
        android:layout_margin="7dp"
        android:ems="10"
        android:hint="Notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recy" />

    <ImageButton
        android:id="@+id/add"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/pluscircle"
        app:layout_constraintBottom_toBottomOf="@+id/normal"
        app:layout_constraintStart_toEndOf="@+id/normal"
        app:layout_constraintTop_toTopOf="@+id/normal" />


    <Button
        android:id="@+id/addAttachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/attach"
        android:drawablePadding="-15sp"
        android:minHeight="1dp"
        android:text=" Add File"
        android:textAllCaps="false"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/note"
        app:layout_constraintTop_toBottomOf="@+id/note" />

    <Button
        android:id="@+id/attachmentView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackground"
        android:minWidth="1dp"
        android:text="View"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/addAttachment"
        app:layout_constraintTop_toBottomOf="@+id/addAttachment" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackground"
        android:minWidth="1dp"
        android:text=" or "
        android:textAllCaps="false"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/attachmentView"
        app:layout_constraintTop_toTopOf="@+id/attachmentView" />

    <Button
        android:id="@+id/deleteAttachment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackground"
        android:minWidth="1dp"
        android:text="delete"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackground"
        android:minWidth="1dp"
        android:text=" file."
        android:textAllCaps="false"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/deleteAttachment"
        app:layout_constraintTop_toTopOf="@+id/deleteAttachment" />


    <Button
        android:id="@+id/submitRecord"

        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/buttonshape"
        android:text="Create"
        android:textAllCaps="false"

        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/cancel"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buttonshape"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recy"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        app:layout_constraintTop_toBottomOf="@+id/test" />
</androidx.constraintlayout.widget.ConstraintLayout>