<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SearchForPatient">

    <include
        android:id="@+id/viewRequestToolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/SearchPatientInput"
        android:layout_width="367dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_style"
        android:ems="10"
        android:hint="Search For Patient.."
        android:imeOptions="actionSearch"
        android:inputType="textPersonName"
        android:lines="1"
        android:maxLines="1"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/d_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/d_bottom_navigation" />


    <ImageButton
        android:id="@+id/searchPatientbutton"
        android:layout_width="39dp"
        android:layout_height="42dp"
        android:background="@android:drawable/ic_menu_search"
        android:src="@drawable/search"
        app:layout_constraintBottom_toBottomOf="@+id/SearchPatientInput"
        app:layout_constraintEnd_toEndOf="@+id/SearchPatientInput"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="@+id/SearchPatientInput"
        app:layout_constraintTop_toTopOf="@+id/SearchPatientInput" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Patientresult"
        android:layout_width="394dp"
        android:layout_height="520dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewRequestToolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>


