<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">


        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="116dp"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/button5"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#794D71"
                android:clickable="false" />

            <TextView
                android:id="@+id/display_request_name"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="left"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="89dp"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:gravity="left"
                android:text="Patient Name"
                android:textAlignment="textStart"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/display_request_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="33dp"
                android:layout_toEndOf="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:gravity="left"
                android:text=" ID  "
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/display_request_daterequest"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginBottom="7dp"
                android:layout_toEndOf="@+id/display_request_Date"
                android:layout_toRightOf="@+id/display_request_Date"
                android:text="Date"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/display_request_type"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="58dp"
                android:layout_toEndOf="@+id/textView11"
                android:layout_toRightOf="@+id/textView11"
                android:gravity="left"
                android:text="Type"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/display_request_Date"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="88dp"
                android:layout_toEndOf="@+id/textView12"
                android:layout_toRightOf="@+id/textView12"
                android:gravity="left"
                android:text="Date"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="56dp"
                android:layout_height="21dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="89dp"
                android:text="Name: "
                android:textColor="#131010"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/display_request_daterequest"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/display_request_Date"
                android:layout_toRightOf="@+id/display_request_Date"
                android:text="Request Date:"
                android:textColor="#131010"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="63dp"
                android:text="ID:"
                android:textColor="#050101"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="58dp"
                android:layout_marginBottom="36dp"
                android:text="Type:"
                android:textColor="#050101"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="87dp"
                android:layout_marginBottom="7dp"
                android:text="Appointment Date:"
                android:textColor="#050101"
                android:textSize="18sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>